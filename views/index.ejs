<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://kit.fontawesome.com/5d4ee011b6.js" crossorigin="anonymous"></script>
    
</head>
<body>
    <div class="header">
        <div class="left_header">
            <h1>Qna Website</h1>
        </div>
        <div class="middle_header">
            <i class="fas fa-search"></i>
            <form action="">
                <input class="search" type="text" placeholder="Search Anything Here" name="search">
            </form>
        </div>
        <div class="right_header">
            <% if(login) { %>
            <a class="join" href="logout">Log Out</a>
            <% } 
            else { %> <a class="join" href="community">Join The Community</a> <% } %>
        </div>
    </div>
    <div class="banner">

    </div>
    <div class="container">
        <div class="left_container"></div>
        <div class="middle_container">
            <div class="left_middle_container">
                <div class="left_middle_container_top">
                    <h3>Explore Our Latest Question</h3>
                    <a href="/ask" class="ask">Ask Question</a>
                </div>
                <div class="left_middle_container_bottom">
                    <% results.forEach((result)=>{ %>

                    
                    <div class="question">
                        <div class="left_question">
                            <!-- <div class="left_question_section1">900 <br> Votes</div> -->
                            <div class="left_question_section2"><%= totalAnswer %> <br> Answered</div>
                            <div class="left_question_section3"> 5216 <br> views</div>
                        </div>
                        <div class="right_question">
                            <a href="/question/<%= result._id %>/<%= result.title.replace(/\s+/g, '-').toLowerCase() %>"><%= result.title %></a>
                        </div>
                    </div>

                    <% }); %>




                



                    
                </div>
            </div>
            <div class="right_middle_container"></div>
        </div>
        <div class="right_container"></div>
    </div>
</body>
</html>