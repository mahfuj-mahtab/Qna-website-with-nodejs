<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/registerStyle.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="form">
        <div class="register">
            <h2>Register</h2>
    <form action="/join" method="POST">
    
    <input type="text" name="name" id="" placeholder="full name">
    <input type="text" name="user" id="" placeholder="username">
    <input type="text" name="email" id="" placeholder="email">
    <input type="password" name="password" id="" placeholder="***********">
    <input type="submit" value="Register">
        <p>Already Registered? <a id="reg" href="#login">Login Here</a></p>
    </form>
</div>
<div class="login none">

    <h2>Login</h2>
    <form action="/login" method="POST">
    <input type="text" name="user" id="" placeholder="user">
    <input type="password" name="password" id="" placeholder="password">
    <input type="submit" value="Login">
    <p>Dont Have Account? <a id="log" href="#register">Register Here</a></p>

    </form>
</div>
</div>
</div>

<script>
    const register = document.querySelector(".register");
    const login = document.querySelector(".login");
    const regButton = document.querySelector("#reg");
    const logButton  = document.querySelector("#log");

    regButton.addEventListener("click",()=>{
       register.classList.add("none"); 
       login.classList.remove("none");
})

logButton.addEventListener("click",()=>{
       login.classList.add("none"); 
       register.classList.remove("none");
})


</script>


</body>
</html>